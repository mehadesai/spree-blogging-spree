= content_for :page_actions do
  %li= button_link_to Spree.t(:new_blog), new_object_url, :icon => 'add'
= content_for :page_title do
  = Spree.t(:blogs)
- if @blogs.any?
  %table.index
    %thead
      %tr
        %th= Spree.t(:id)
        %th.title= Spree.t(:name)
        %th= Spree.t(:enabled)
        %th.actions
    %tbody
      - @blogs.each do |blog|
        %tr class="#{cycle('odd', 'even')}" id="#{dom_id blog}"
          %td= blog.id
          %td= blog.name
          %td= blog.enabled
          %td.actions
            = link_to_edit blog, no_text: true
            = link_to_delete blog, no_text: true
  = paginate @blogs
- else
  %p= Spree.t(:no_blogs)

